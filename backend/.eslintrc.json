{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": false,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "plugins": ["jest"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "describe": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": 0,
    "max-len": 0,
    "consistent-return": "off"
  }
}